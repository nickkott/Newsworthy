{
	"manifest_version": 2,
	"name": "Newsworthy",
	"description": "A user-powered tool to help guide you toward quality news.",
	"version": "1.0",
	"permissions": [
        "tabs",
		"contextMenus",
		"http://*/"
	],
    "browser_action":  {
        "default_icon":  "n16.png",
        "default_title":  "Newsworthy!"
        /*"default_popup":  "popup.html"*/
    },
	"icons": {
		"16": "n16.png",
		"48": "n48.png",
		"128": "n128.png"
	},
	
    "background": {
		"persistent": true,
		/*"page": "background.html",*/
        "scripts": ["database.js","background.js"]
	},
    
    "content_scripts":  [
        {
            "matches":  ["<all_urls>"],
            "js":  ["content_script.js"]
        }
    ],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}